<script>
  // Get app URL - use environment variable or detect based on hostname
  function getAppUrl() {
    // Check if we're in development
    const hostname = typeof window !== "undefined" ? window.location.hostname : "";
    const isDevelopment = hostname === "localhost" || hostname.includes("127.0.0.1");
    
    if (isDevelopment) {
      // For local development, use localhost:3000 (Next.js default)
      return "http://localhost:3000";
    }
    
    // Production: use app subdomain
    return "https://app.clearlaunch.co.uk";
  }

  const APP_URL = getAppUrl();

  // Update all app links to use the correct URL
  document.addEventListener('DOMContentLoaded', function() {
    // Update signup/login links
    document.querySelectorAll('a[href*="app.clearlaunch.co.uk"]').forEach(link => {
      const href = link.getAttribute('href');
      if (href) {
        link.setAttribute('href', href.replace('https://app.clearlaunch.co.uk', APP_URL));
      }
    });

    // Handle smooth scrolling for anchor links with offset for sticky header
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        const href = this.getAttribute('href');
        if (href === '#hero-form') {
          e.preventDefault();
          const target = document.getElementById('hero-form');
          if (target) {
            const headerOffset = 100; // Account for sticky header + padding
            const elementPosition = target.getBoundingClientRect().top;
            const offsetPosition = elementPosition + window.pageYOffset - headerOffset;

            window.scrollTo({
              top: offsetPosition,
              behavior: 'smooth'
            });
          }
        }
      });
    });

    // Also handle direct hash navigation on page load
    if (window.location.hash === '#hero-form') {
      setTimeout(() => {
        const target = document.getElementById('hero-form');
        if (target) {
          const headerOffset = 100;
          const elementPosition = target.getBoundingClientRect().top;
          const offsetPosition = elementPosition + window.pageYOffset - headerOffset;
          window.scrollTo({
            top: offsetPosition,
            behavior: 'smooth'
          });
        }
      }, 100);
    }
  });
</script>
