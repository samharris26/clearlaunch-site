<script>
  // Handle smooth scrolling for anchor links with offset for sticky header
  document.addEventListener('DOMContentLoaded', function() {
    // Handle anchor links with smooth scroll and offset
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        const href = this.getAttribute('href');
        if (href === '#hero-form') {
          e.preventDefault();
          const target = document.getElementById('hero-form');
          if (target) {
            const headerOffset = 100; // Account for sticky header + padding
            const elementPosition = target.getBoundingClientRect().top;
            const offsetPosition = elementPosition + window.pageYOffset - headerOffset;

            window.scrollTo({
              top: offsetPosition,
              behavior: 'smooth'
            });
          }
        }
      });
    });

    // Also handle direct hash navigation on page load
    if (window.location.hash === '#hero-form') {
      setTimeout(() => {
        const target = document.getElementById('hero-form');
        if (target) {
          const headerOffset = 100;
          const elementPosition = target.getBoundingClientRect().top;
          const offsetPosition = elementPosition + window.pageYOffset - headerOffset;
          window.scrollTo({
            top: offsetPosition,
            behavior: 'smooth'
          });
        }
      }, 100);
    }
  });

  // Get API URL from environment or use default
  // IMPORTANT: Set PUBLIC_API_URL in Vercel environment variables for the marketing site
  // Default is the Vercel app URL, but you can override with PUBLIC_API_URL
  function getApiUrl() {
    // First, try environment variable (set in Vercel)
    if (import.meta.env.PUBLIC_API_URL) {
      console.log("Using PUBLIC_API_URL from environment:", import.meta.env.PUBLIC_API_URL);
      return import.meta.env.PUBLIC_API_URL;
    }
    
    // Check if we're in development
    const hostname = typeof window !== "undefined" ? window.location.hostname : "";
    const isDevelopment = hostname === "localhost" || hostname.includes("127.0.0.1");
    
    if (isDevelopment) {
      console.log("Using localhost for development");
      return "http://localhost:3000";
    }
    
    // Production default: use the Vercel app URL
    const productionApiUrl = "https://clearlaunch-app.vercel.app";
    console.log("Using production API URL:", productionApiUrl);
    return productionApiUrl;
  }

  const API_BASE_URL = getApiUrl();
  console.log("=== Signup Form Configuration ===");
  console.log("API Base URL:", API_BASE_URL);
  console.log("Current hostname:", typeof window !== "undefined" ? window.location.hostname : "SSR");
  console.log("PUBLIC_API_URL env:", import.meta.env.PUBLIC_API_URL || "NOT SET");

  const form = document.getElementById("signup-form");
  const emailInput = document.getElementById("signup-email");
  const submitButton = document.getElementById("signup-button");
  const buttonText = document.getElementById("signup-button-text");
  const spinner = document.getElementById("signup-spinner");
  const messageDiv = document.getElementById("signup-message");

  function setLoading(isLoading) {
    if (submitButton) submitButton.disabled = isLoading;
    if (emailInput) emailInput.disabled = isLoading;
    if (spinner) spinner.classList.toggle("hidden", !isLoading);
    if (buttonText) {
      buttonText.textContent = isLoading ? "Signing up..." : "Get early access";
    }
  }

  function showMessage(text, type) {
    if (!messageDiv) return;
    messageDiv.textContent = text;
    messageDiv.className = `mt-3 text-xs ${type === "success" ? "text-emerald-400" : "text-red-400"}`;
    messageDiv.classList.remove("hidden");
  }

  function hideMessage() {
    if (messageDiv) {
      messageDiv.classList.add("hidden");
      messageDiv.textContent = "";
    }
  }

  if (form) {
    form.addEventListener("submit", async (e) => {
      e.preventDefault();
      hideMessage();

      const email = emailInput?.value?.trim();

      if (!email) {
        showMessage("Please enter your email address.", "error");
        return;
      }

      setLoading(true);

      const url = `${API_BASE_URL}/api/signup`;
      console.log("Attempting to fetch:", url);
      console.log("API Base URL:", API_BASE_URL);
      console.log("Email:", email);
      console.log("Current hostname:", window.location.hostname);

      try {
        const response = await fetch(url, {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ email }),
        });

        console.log("Response status:", response.status);
        console.log("Response headers:", Object.fromEntries(response.headers.entries()));

        // Better error handling for non-JSON responses
        let data;
        const contentType = response.headers.get("content-type");
        if (contentType && contentType.includes("application/json")) {
          data = await response.json();
        } else {
          const text = await response.text();
          console.error("Non-JSON response:", text);
          throw new Error("Server returned invalid response format");
        }

        if (!response.ok) {
          throw new Error(data.error || `Server error: ${response.status}`);
        }

        // Success
        console.log("Success!", data);
        showMessage("Thanks! We'll be in touch soon.", "success");
        if (emailInput) emailInput.value = "";

        // Hide message after 5 seconds
        setTimeout(() => {
          hideMessage();
        }, 5000);
      } catch (error) {
        console.error("Signup error:", error);
        console.error("Error details:", {
          name: error.name,
          message: error.message,
          stack: error.stack,
          attemptedUrl: url,
          apiBaseUrl: API_BASE_URL
        });
        
        // Better error messages for different error types
        let errorMessage = "Something went wrong. Please try again.";
        if (error instanceof TypeError && error.message === "Failed to fetch") {
          errorMessage = `Cannot connect to server at ${API_BASE_URL}. Please check your connection or contact support.`;
          console.error("Network error - Failed to connect to:", url);
          console.error("This usually means:");
          console.error("1. The API URL is incorrect");
          console.error("2. CORS is blocking the request");
          console.error("3. The server is down");
        } else if (error.message) {
          errorMessage = error.message;
        }
        
        showMessage(errorMessage, "error");
      } finally {
        setLoading(false);
      }
    });
  }
</script>
