<div
    id="cookie-consent"
    class="fixed bottom-0 left-0 right-0 z-50 p-4 bg-slate-900/90 border-t border-slate-800 backdrop-blur-md translate-y-full transition-transform duration-500 ease-in-out"
>
    <div
        class="max-w-5xl mx-auto flex flex-col sm:flex-row items-center justify-between gap-4"
    >
        <div class="text-sm text-slate-300 text-center sm:text-left">
            <p>
                We use cookies to enhance your experience. By continuing to
                visit this site you agree to our use of cookies.
                <a
                    href="/privacy-policy"
                    class="text-sky-400 hover:text-sky-300 underline underline-offset-2"
                    >Learn more</a
                >
            </p>
        </div>
        <div class="flex gap-3">
            <button
                id="cookie-accept"
                class="px-4 py-2 text-sm font-semibold text-slate-950 bg-sky-500 rounded-lg hover:bg-sky-400 focus:outline-none focus:ring-2 focus:ring-sky-500 focus:ring-offset-2 focus:ring-offset-slate-900 transition-colors"
            >
                Accept
            </button>
            <button
                id="cookie-close"
                class="px-4 py-2 text-sm font-semibold text-slate-300 bg-slate-800 rounded-lg hover:bg-slate-700 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2 focus:ring-offset-slate-900 transition-colors"
            >
                Close
            </button>
        </div>
    </div>
</div>

<script>
    const cookieConsent = document.getElementById("cookie-consent");
    const acceptBtn = document.getElementById("cookie-accept");
    const closeBtn = document.getElementById("cookie-close");

    const CONSENT_KEY = "clearlaunch_cookie_consent";

    function showConsent() {
        if (!localStorage.getItem(CONSENT_KEY)) {
            // Small delay to allow animation to work after page load
            setTimeout(() => {
                cookieConsent?.classList.remove("translate-y-full");
            }, 1000);
        }
    }

    function hideConsent() {
        cookieConsent?.classList.add("translate-y-full");
    }

    function acceptConsent() {
        localStorage.setItem(CONSENT_KEY, "true");
        hideConsent();
    }

    acceptBtn?.addEventListener("click", acceptConsent);
    closeBtn?.addEventListener("click", hideConsent);

    // Check on load
    document.addEventListener("DOMContentLoaded", showConsent);
</script>
